{% extends 'layouts/is_login.html.twig' %}

{% block title %}Mes clients{% endblock %}

{% block content %}
    <div class="mt-16">
        <h2 class="mb-5 text-3xl text-blue-500 font-bold">Fiche clients</h2>

        <div class="inline-block float-right">
            <a href="{{ path('app_customer_update', {'id': customer.id}) }}" class="bg-yellow-400 px-3 py-2 rounded shadow-md hover:bg-yellow-300"><i class="fas fa-pencil-alt"></i> Editer le client</a>
            <span onclick="confirmDeledte('{{ customer.firstname }} {{ customer.lastname }}', '{{ customer.id }}')" class="ml-3 cursor-pointer bg-red-500 px-3 py-2 rounded text-white shadow-md hover:bg-red-400"><i class="fas fa-user-times"></i> Supprimer le client</span>
        </div>
        <br><br>

        <div class="bg-white p-10 rounded-md shadow-md text-gray-500">
            <h3 class="mb-5 text-2xl font-bold">Informations client</h3>
            <div class="grid grid-cols-3 gap-2">
                <div class="shadow-xl border-2 border-gray-300 px-5 py-2">
                    <h4 class="mb-2 text-xl text-blue-500 font-bold">Identité</h4>
                    <p><b>Nom de l'entreprise : </b> {{ customer.company }}</p>
                    <p><b>Nom : </b>{{ customer.lastname }}</p>
                    <p><b>Prénom : </b>{{ customer.firstname }}</p>
                </div>

                <div class="shadow-xl border-2 border-gray-300 px-5 py-2">
                    <h4 class="mb-2 text-xl text-blue-500 font-bold">Contact</h4>
                    <p><b>Téléphone : </b>{{ phone(customer.phone) }}</p>
                    <p><b>Portable : </b>{{ phone(customer.mobile) }}</p>
                    <p><b>E-mail : </b>{{ customer.email }}</p>
                </div>

                <div class="shadow-xl border-2 border-gray-300 px-5 py-2">
                    <h4 class="mb-2 text-xl text-blue-500 font-bold">Adresse</h4>
                    <p><b>Adresse : </b> {{ customer.address }}</p>
                    <p><b>Complément : </b>{{ customer.addressComplement }}</p>
                    <p><b>Code Postal : </b>{{ customer.zipCode }}</p>
                    <p><b>Ville : </b>{{ customer.city }}, {{ customer.country|country_name }}</p>
                </div>
            </div>


            <h3 class="mt-10 text-2xl font-bold">Informations bancaire</h3>
            <a href="#" class="m-2 hover:text-blue-500 text-lg font-bold"><i class="fas fa-plus-circle"></i> Ajouter un rib</a>
        </div>

        <div class="mt-5 bg-white p-10 rounded-md shadow-md text-gray-500">
            <h3 class="mb-5 text-2xl font-bold">Missions</h3>

            <div class="text-center hover:text-blue-500 cursor-pointer">
                <a href="" class="w-full">
                    <i class="text-4xl fas fa-plus-circle"></i>
                    <p class="text-xl font-bold">Ajouter une misison</p>
                </a>
            </div>
        </div>

        <div class="mt-5 bg-white p-10 rounded-md shadow-md text-gray-500">
            <h3 class="mb-5 text-2xl font-bold">Facture</h3>

            <div class="text-center hover:text-blue-500 cursor-pointer">
                <a href="" class="w-full">
                    <i class="text-4xl fas fa-plus-circle"></i>
                    <p class="text-xl font-bold">Ajouter une facture</p>
                </a>
            </div>
        </div>
    </div>

    <script>

        function actionMenu(id) {
            let elt = document.getElementById(id);
            elt.classList.toggle('hidden');
        }

        function confirmDeledte(name, id) {
            if (confirm('Souhaitez-vous vraiment supprimer ' + name + ' ? (cette action est irrévocable)')) {
                document.location.href = '/clients/supprimer/' + id;
            }
        }
    </script>
{% endblock %}
