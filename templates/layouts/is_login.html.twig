{% extends 'base.html.twig' %}

{% block title %}Se connecter{% endblock %}

{% block body %}
    <div class="flex">
        <div class="w-1/5 sidebar-bg h-screen p-10 text-white relative">
            {% include 'partials/sidebar.html.twig' %}
        </div>

        <div class="w-4/5 bg-gray-300 p-10 max-h-screen overflow-scroll">
            <header class="-ml-10 grid grid-cols-2 px-5 py-3 fixed top-0 bg-gray-800 w-full text-white z-50">
                <div class="flex text-lg uppercase">
                    <span><i class="fas fa-arrow-circle-left text-xl"></i></span>
                    <span class="ml-3 text-xl"><i class="fas fa-arrow-circle-right"></i></span>
                    <h3 class="ml-5">{{ header }}</h3>
                </div>
            </header>
            {% block content %}{% endblock %}
        </div>
    </div>
{% endblock %}
